
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutShopFashion.cshtml";
}

<h4 style="color:aqua">@ViewBag.ThongBao</h4>



<table>
    <h2>Đăng Nhập</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <tr style="height:40px">
            <td>
                Tên Đăng nhập:
            </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                Mật Khẩu:
            </td>
            <td>
                @Html.TextBox("MatKhau")
                @ViewData["Loi3"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>
            </td>
            <td>
                <input type="submit" value="Đăng Nhập" />
            </td>
        </tr>
    }

</table>



